

.center
  text-align: center
.H1
  font-size: 2.4em
  margin: 1em 0
  color: $blue - 12%
.NB
  border-left 4px solid $text
  padding-left 1em



.text
  color: $header
  h1
    color $blue
  h2
    position: relative
    padding-bottom: 1em
    &:before
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 3em;
      height: .2em;
      background: gold //(#ffd700)

  h2, h3, h4
    margin 1em
    -webkit-font-smoothing: auto
    -moz-osx-font-smoothing: auto


#gmap-container
  height: 600px
  background #FCFCFC
  margin: 3em 0

  +min(820px)
    margin: 3em 7%

