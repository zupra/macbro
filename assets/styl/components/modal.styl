//=== MODAL
.overlay
  z-index 100
  cursor pointer
  position fixed
  left 0
  top 0


  //width 100vw
  //height 100vh
  width 100%
  height 100%

  //background rgba(#607d8b 0.7) url(https://www.transparenttextures.com/patterns/dark-leather.png)
  background rgba(#000 0.7) //url($url/bg/dark-leather.png)
  display flex
  //justify-content center

  overflow vizible //auto
  //overflow-x hidden
  //overflow-y auto


@keyframes modal
  to
    transform scale(1)
    opacity 1

.modal
  animation modal .2s .3s cubic-bezier(0.250, 0.460, 0.450, 0.940) forwards	//ease-in
  transform scale(.5)
  opacity 0

  //reset if from HEADER as component
  //color #262626
  background #FFF

  position relative //for close

  width 90%
  padding 1.4em

  cursor auto	
  max-width 780px
  
  //margin auto
  margin 5% auto auto

  &.toCenter
    margin auto
  &.XL
    max-width 960px
  &.SM
    max-width 460px
    //margin 5% auto auto

.close
  cursor pointer
  position absolute
  top: -22px;
  right: -22px;
  width 44px //3em
  height 44px //3em
  border-radius 50%



  background $blue url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='20' height='20' viewBox='0 0 20 20'><g stroke='#FFF' stroke-width='6' stroke-linecap='round' stroke-linejoin='round'><line x1='3' y1='3' x2='17' y2='17'/><line x1='3' y1='17' x2='17' y2='3'/></g></svg>") center no-repeat
  &:hover
    background-color $blue + 20



