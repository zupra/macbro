  list-style none
  margin 1em
  text-align center
  li
    display inline-block
    margin .5em
    // cursor: pointer
    // border 3px solid $orange
    // padding .7em 1em
    // display inline-block
    // border-radius 2em
    // margin .5em
      
    // &:hover
    //   cursor pointer
